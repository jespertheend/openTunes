{
	"tasks": {
		"watch": "deno run --allow-env --allow-read --allow-write --allow-net --watch main.js",
		"inspect": "deno run --allow-env --allow-read --allow-write --allow-net --inspect main.js"
	},
	"importMap": "importmap.json",
	"fmt": {
		"files": {
			"exclude": [".denoTypes"]
		},
		"options": {
			"indentWidth": 4,
			"lineWidth": 240,
			"useTabs": true
		}
	}
}
